[
  {
    "name": "debezium_identity-connector-v3",
    "config": {
      "connector.class": "io.debezium.connector.mysql.MySqlConnector",
      "tasks.max": "1",
      "database.hostname": "mysql-identity",
      "database.port": "3306",
      "database.user": "root",
      "database.password": "secret",
      "database.dbname": "identity",
      "database.server.id": 10002,
      "table.include.list": "identity.outbox",
      "topic.prefix": "identity_db",

      "transforms": "outbox",
      "transforms.outbox.type": "io.debezium.transforms.outbox.EventRouter",
      "transforms.outbox.additional.fields": "saga_id:event",
      "transforms.outbox.table.fields.additional.placement": "aggregateid:header:userid,saga_id:header:sagaId,event:header",
      "transforms.outbox.route.by.field": "aggregatetype",
      "transforms.outbox.route.topic.replacement": "${routedByValue}.topics",

      "schema.history.internal.kafka.bootstrap.servers": "broker1:9092,broker2:9092,broker3:9092",
      "schema.history.internal.kafka.topic": "schema.identity",

      "snapshot.mode": "never"
    }
  },
